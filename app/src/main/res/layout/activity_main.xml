<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Multiple image "
        android:layout_centerHorizontal="true"
        android:textColor="#0F6A76"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/header_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"

        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:layout_marginBottom="10dp"
        android:focusedByDefault="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chooseImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Choose image"
        android:textAllCaps="false"
        android:textColor="#1E3A4E"
        android:textSize="17sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/previousBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSwitcher"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Previous"
        android:textAllCaps="false"
        android:textColor="#1E3A4E"
        android:textSize="17sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textColor="#1E3A4E"
        android:layout_margin="10dp"
        android:layout_below="@id/imageSwitcher"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/gonextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go and show all images -->"
        android:textSize="18sp"
        android:layout_below="@id/previousBtn"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#1E3A4E"
        />
    <TextView
        android:id="@+id/nextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:layout_toRightOf="@id/gonextActivity"
        android:layout_below="@id/previousBtn"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textFontWeight="500"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>